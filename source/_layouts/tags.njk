---
layout: default
pageClass: tags
eleventyComputed:
  title: "Tag Archive: {{ tag }}"
---

{%- from "hero.njk" import hero with context -%}
{%- from "post-meta.njk" import postMeta with context -%}

<h1>{{ title }}</h1>

{%- set postList = collections[tag]|reverse -%}

{%- if postList -%}
  {%- for post in postList -%}
    <article>
      {{- hero(
          banner=post.data.banner,
          teaser=true,
          title=post.data.title
      ) -}}

      {{- postMeta(
          date=post.data.date,
          excerpt=post.data.excerpt,
          tags=post.data.tags,
          teaser=true,
          url=post.url
      ) -}}
    </article>
  {%- endfor -%}
{%- endif -%}
